@using BuilderPulsePro.Projects
@inherits BuilderPulseProComponentBase

@if (TaskAppointments != null)
{ 
    <SfSchedule TValue="AppointmentData"   @bind-SelectedDate="StartDate" @bind-CurrentView=@CurrentView EnableAutoRowHeight="true" ShowQuickInfo="false"   >
        <ScheduleEvents TValue="AppointmentData" Resized="OnResizeStop" Dragged="OnDragStop" OnCellDoubleClick="HandleCellDoubleClick" OnPopupOpen="HandlePopupOpen"></ScheduleEvents>
        <ScheduleEventSettings DataSource="TaskAppointments" ></ScheduleEventSettings>
        <ScheduleViews>
            <ScheduleView Option="View.Month" MaxEventsPerRow="3"></ScheduleView>
        </ScheduleViews>
    </SfSchedule>

    <EditTaskModal @ref=EditTaskModal Saved="ProjectTaskSaved" Tasks="Tasks" Project="Project" />
    <ScheduleTaskModal @ref=ScheduleTaskModal Saved="ScheduledTaskSaved" Tasks="Tasks" Project="Project" />
}